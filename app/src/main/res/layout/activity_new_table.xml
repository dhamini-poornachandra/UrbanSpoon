<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.msrit.urbanspoon.NewTableActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/table_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/table_name_edit_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Table Name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/capacity_edit_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacity" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/capacity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:text="Add Table" />
</RelativeLayout>
